<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/mautrang"
    tools:context=".manchinh.ThemBanAnActivity">

    <EditText
        android:textColor="@color/colorPrimary"
        android:id="@+id/edtthemtenbanan"
        android:textColorHint="@color/colorPrimary"
        android:hint="@string/tenbanan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btndongy"
        android:textColor="@color/mautrang"
        android:background="@color/colorPrimary"
        android:layout_gravity="center"
        android:text="@string/dongy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>